@model FFR.Models.center

@{
    ViewBag.Title = "اختيار مكان الاستلام";
}

<!-- Start header -->
<div class="all-page-title page-breadcrumb">
    <div class="container text-center">
        <div class="row">
            <div class="col-lg-12">
                <h1>صفحة اختيار مكان الاستلام</h1>
            </div>
        </div>
    </div>
</div>
<!-- End header -->
<div class="about-section-box">
    <div class="container text-right" dir="rtl">
        <div class="form-group">
            @using (Html.BeginForm("chose", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="row">
                    <p class="control-label col-md-3 text-md-left">اختر مكان الاستلام</p>
                    <div class="col-md-7">
                        @Html.DropDownList("center_id", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                    <input type="submit" value="تحديد" class="col-md-2 btn btn-warning" />
                </div>
            }
        </div>
        <div>
            @Html.ActionLink("العودة للصفحة الرئيسية", "Index")
        </div>
    </div>
</div>