        <a href="#" class="next"><i class="fa fa-angle-right" aria-hidden="true"></i></a>
        <a href="#" class="prev"><i class="fa fa-angle-left" aria-hidden="true"></i></a>
    </div>
</div>


<!-- Start Menu -->
<div class="menu-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="heading-title text-center">
                    <h2>قائمة الوجبات</h2>
                    <p>يمكنك استعراض الوجبات وأسعارها كما يمكنك تحديد أي قسم تريد من على اليمين</p>
                </div>
            </div>
        </div>

        <div class="row inner-menu-box text-right" dir="rtl">
            <div class="col-3">
                <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                    <a class="nav-link active" id="v-pills-home-tab" data-toggle="pill" href="#v-pills-home" role="tab" aria-controls="v-pills-home" aria-selected="true">الكل</a>
                    @foreach (var cat in cats)
                    {
                        <a class="nav-link" id="v-pills-@cat.Id-tab" data-toggle="pill" href="#v-pills-@cat.Id" role="tab" aria-controls="v-pills-@cat.Id" aria-selected="false">@cat.name</a>

                    }
                </div>
            </div>

            <div class="col-9">
                <div class="tab-content" id="v-pills-tabContent">
                    <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab">
                        <div class="row">
                            @foreach (var item in Model)
                            {
                                <div class="col-lg-4 col-md-6 special-grid">
                                    <div class="gallery-single fix">
                                        <img src="@Url.Content("~/pics/"+item.picture)" class="img-fluid" alt="Image">
                                        <div class="why-text">
                                            @Html.ActionLink(item.name, "details", new { id = item.Id }, new { @class = "act" })
                                            <p></p>
                                            <p style="font-size: 20px; display: inline;"> @item.discount_price ل.س</p>
                                            @if (item.discount_price != item.price)
                                            {
                                                <p style="font-size: 17px; color: #e4e4e4; text-decoration: line-through; display: inline;"> @item.price ل.س</p>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                    </div>
                    @foreach (var cat in cats)
                    {
                        <div class="tab-pane fade" id="v-pills-@cat.Id" role="tabpanel" aria-labelledby="v-pills-@cat.Id-tab">
                            <div class="row">
                                @foreach (var item in cat.meals)
                                {
                                    <div class="col-lg-4 col-md-6 special-grid drinks">
                                        <div class="gallery-single fix">
                                            <img src="@Url.Content("~/pics/" + item.picture)" class="img-fluid" alt="Image">
                                            <div class="why-text">
                                                @Html.ActionLink(item.name, "details", new { id = item.Id }, new { @class = "act" })
                                                <p></p>
                                                <p style="font-size: 20px; display: inline;"> @item.discount_price ل.س</p>
                                                @if (item.discount_price != item.price)
                                                {
                                                    <p style="font-size: 17px; color: #e4e4e4; text-decoration: line-through; display: inline;"> @item.price ل.س</p>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

    </div>
</div>
<!-- End Menu -->
<!-- Start QT -->
<div class="qt-box qt-background">
    <div class="container">
        <div class="row" dir="rtl">
            <div class="col-md-8 ml-auto mr-auto text-center">
                <p class="lead ">
                    " إذا لم تكن أحد الطهاة، ابتعد عن الطريق وقدم التحية للشيف "
                </p>
                <span class="lead">ميشيل سترهان</span>
            </div>
        </div>
    </div>
</div>
<!-- End QT -->
<!-- Start Gallery -->
<div class="gallery-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="heading-title text-center">
                    <h2>معرض الصور</h2>
                    <p>نضع بين أيديكم هذه الصور لأشهى الأطباق لدينا</p>
                </div>
            </div>
        </div>
        <div class="tz-gallery">
            <div class="row">
                @foreach (var item in Model)
                {
                    string pic = "~/pics/" + item.picture;
                    <div class="col-sm-12 col-md-4 col-lg-4">
                        <a class="lightbox" href="@Url.Content(pic)">
                            <img class="img-fluid" src="@Url.Content(pic)" alt="Gallery Images">
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- End Gallery -->
