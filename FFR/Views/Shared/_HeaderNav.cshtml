@{ 
    int signed = 0;
    if (Session["id"] != null) { signed = Convert.ToInt32(Session["id"]); }
    bool admin = false;
    if (Session["admin"] != null) { admin = true; }

}

<!-- Start header -->
<header class="top-navbar">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="index.html">
                <img src="@Url.Content("~/images/logo.png")" alt="" />
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbars-rs-food" aria-controls="navbars-rs-food" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbars-rs-food">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        @Html.ActionLink("الرئيسية", "Index", "Home", null, new { @class = "nav-link" })
                    </li>
                    @if (signed == 0 && !admin)
                    {
                        <li class="nav-item">@Html.ActionLink("تسجيل الدخول", "login_signup", "Home", null, new { @class = "nav-link" })</li>
                    }
                    else
                    {
                        <li class="nav-item">@Html.ActionLink("تسجيل خروج", "Index", "Home", new { id = 1 }, new { @class = "nav-link" })</li>
                    }
                    @if (signed != 0)
                    {
                        <li class="nav-item">@Html.ActionLink("المفضلة", "favorit", "Home", null, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("طلب", "chose", "Home", null, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("الملف الشخصي", "edit_profile", "Home", null, new { @class = "nav-link" })</li>
                    }
                    <li class="nav-item">@Html.ActionLink("العروض", "solds", "Home", null, new { @class = "nav-link" })</li>
                    @if (admin)
                    {
                        <li class="nav-item">@Html.ActionLink("الإدارة", "Index", "Management", null, new { @class = "nav-link" })</li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>
<!-- End header -->