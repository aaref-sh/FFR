@model IEnumerable<FFR.Models.meal>

@{
    ViewBag.Title = "إلفاء عرض";
}

<!-- Start All Pages -->
<div class="all-page-title page-breadcrumb">
    <div class="container text-center">
        <div class="row">
            <div class="col-lg-12">
                <h1>إلغاء عرض</h1>
            </div>
        </div>
    </div>
</div>
<!-- End All Pages -->
<!-- Start Stuff -->
<div class="stuff-box">
    <div class="container text-right" dir="rtl">
        <table class="table table-responsive-sm">
            <tr>
                <th>
                    اسم الوجبة
                </th>
                <th>
                    السعر
                </th>
                <th>
                    سعر العرض
                </th>
                <th>
                    الوصف
                </th>
                <th>
                    الصنف
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.discount_price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.discription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.category.name)
                    </td>
                    <td>
                        @Html.ActionLink("إلغاء العرض", "delete_offer", new { id = item.Id }, new { @class = "btn btn-warning" })
                    </td>
                </tr>
            }

        </table>
        <div dir="rtl" class="text-right">
            @Html.ActionLink("العودة لصفحة الإدارة", "Index")
        </div>
    </div>
</div>